<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_write_corners"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:scaleType="fitXY"
            android:src="@mipmap/old2" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="成人高端体检套餐（男）"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_middle" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="共x项检查项"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/txt_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@color/text_gray" />

        <include layout="@layout/layout_set_meal_head" />
    </LinearLayout>
    <!--优惠-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_write_corners"
        android:drawableLeft="@mipmap/icon_disclosure_lndicator"
        android:drawableRight="@mipmap/icon_disclosure_lndicator"
        android:padding="10dp"
        android:text="最高立减200元" />

</LinearLayout>