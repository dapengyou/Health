<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.test.health.ui.activity.SetMealActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_write_corners"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/old2" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="成人高端体检套餐（男）"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/txt_middle" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="共x项检查项"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/txt_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/text_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="随时退"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="随时改"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="官方直营"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="专业品质"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/txt_12" />
                </LinearLayout>
            </LinearLayout>
            <!--优惠-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_write_corners"
                android:drawableLeft="@mipmap/icon_disclosure_lndicator"
                android:drawableRight="@mipmap/icon_disclosure_lndicator"
                android:padding="10dp"
                android:text="最高立减200元" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_write_corners">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="￥1163.00"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/txt_small" />

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_price"
                android:background="@drawable/bg_yellow"
                android:padding="4dp"
                android:text="APP专享价"
                android:textColor="@color/text_yellow"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_app"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_price"
                android:gravity="center"
                android:text="￥1183.00"
                android:textColor="@color/text_gray"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/text_orange"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="@color/text_write"
            android:textSize="@dimen/txt_middle" />
    </LinearLayout>
</RelativeLayout>
